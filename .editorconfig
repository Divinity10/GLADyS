# EditorConfig - https://editorconfig.org
# Ensures consistent coding styles across editors and IDEs

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Python
[*.py]
indent_size = 4
max_line_length = 120

# Rust
[*.rs]
indent_size = 4

# YAML
[*.{yaml,yml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown - preserve trailing whitespace (used for line breaks)
[*.md]
trim_trailing_whitespace = false

# Makefiles require tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Proto files
[*.proto]
indent_size = 2

# Windows batch files use CRLF
[*.{bat,cmd,ps1}]
end_of_line = crlf
